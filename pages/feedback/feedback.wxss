/* pages/feedback/feedback.wxss */

.textarea-box {
  width: 630rpx;
  min-height: 380rpx;
  max-height: auto;
  background: #fff;
  border: 1px solid #fff;
  margin: 32rpx 30rpx 0 30rpx;
  box-shadow: 0 32rpx 40rpx -32rpx rgba(87, 87, 87, 0.3);
  border-radius: 8rpx;
  padding: 32rpx 30rpx;
  line-height: 80rpx;
}

button {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  margin-top: -45rpx;
  margin-left: 75%;
  border-radius: 50%;
  box-shadow: 0 0 6rpx rgba(87, 87, 87, 0.4);
}

image {
  width: 90rpx;
  height: 90rpx;
  left: 0;
  position: absolute;
}

.wetoast__bd {
  width: 360rpx;
  height: 160rpx;
  bottom: 700rpx;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0 0 6rpx rgba(87, 87, 87, 0.4);
}

.wetoast__bd__title {
  margin: 3px 0;
  color: #353535;
  font-size: 36rpx;
}

.send {
  background-size: cover;
  background-image: url("data:image/png;base64,");
}
